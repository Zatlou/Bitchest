{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block body %}
<section class="login">
  <div class="login__form">
    <div class="row">
      <div class="col s12">
        <div class="card gradient-shadow">
          <form method="post">
            <div class="card-content black-text">
              <h1 class="card-title">Bitchest</h1>
              <div class="row">
                <div class="input-field col s12">
                  <label for="inputEmail">Email</label>
                  <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <label for="inputPassword">Password</label>
                  <input type="password" name="password" id="inputPassword" required>
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                  {% if error %}
                  <span class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="card-action center-align">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                Se connecter
                <i class="material-icons right">send</i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
